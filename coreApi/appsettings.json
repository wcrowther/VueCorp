{
  "ConnectionStrings": {
	"CoreApiData": "Data Source=coreApiData.db"
  },
  "App": {
	"AuthSigningKey": "Double frog said the acrobatic salamader flying through the air.",
	"AuthIssuer": "local",
	"AuthAudience": "All",
	"AllowedOrigins": "https://localhost:7200;https://localhost:9999;https://vuecorp",
	"TokenExpirationMinutes": 30,
	"RefreshTokenExpirationDays": 7,
	"ShowJsonPostDebug":  true
  },
  "Logging": {
	"LogLevel": {
	  "Default": "Information",
	  "Microsoft": "Warning",
	  "Microsoft.Hosting.Lifetime": "Information",
	  "Microsoft.AspNetCore.Authentication": "Debug",
	  "Microsoft.AspNetCore.Authorization": "Debug"
	}
  },
  "Serilog": {
	"MinimumLevel": "Information",
	"WriteTo": [
	  { "Name": "Console" },
	  {
		"Name": "File",
		"Args": {
		  "path": "c:\\logs\\VueCorp\\VueCorp_.log",
		  "rollingInterval": "Day"
		}
	  }
	]
  }
}

